/* pages/list/list.wxss */

.recommend-container{
padding:0 25px;
}
.recommend-article{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.date{
    font-size:52rpx;
    letter-spacing:10rpx;
    position: relative;
    padding-bottom:24rpx;
    margin-top:20rpx;
}
.date::after{
    position: absolute;
    display: block;
    left:62rpx;
    bottom:0;
    content:'';
    width:114rpx;
    height:4rpx;
    background-color:#999;
}
.recommend-title{
  margin-top:20rpx;
    font-size: 28rpx;
    text-align:center;
    line-height:56rpx;
}
.recommend-cover{
    width:700rpx;
    margin-top:30rpx;
}
.recommend-box{}
.recommend-box text{
    display: inline-block;
    border:1px solid black;
    padding:10rpx 20rpx;
    font-size:28rpx;
    margin: 20rpx 20rpx 20rpx 0;
}
.recommend-box text:first-of-type{
    background: #000;
    color:#fff;
    font-weight:bold;
}
/*文章列表样式*/
.recommend-list-container{
    background: #ebebeb;
    padding: 35rpx 35rpx 0rpx;
}
.per-article{
    background-color:#fff;
    padding-bottom:30rpx;
    /*margin-bottom:30rpx;*/
}
.article-head{
padding:20rpx;
}
.article-head image{
    width:50rpx;
    height:50rpx;
    border-radius:50%;
    vertical-align:middle;
    margin-right:10rpx;
}
.article-head text{
    font-size:28rpx;
    color:#666;
}
.article-cover image{
    width:100%;
}
.article-title{
    margin:30rpx;
}
.article-title text{
    font-size:40rpx;
}
.article-handle-box{
    display: flex;
    justify-content: space-between;
    padding:0 30rpx;
}
.article-handle{
    display: flex;
}
 .article-type text{
    border:1px solid black;
    padding:10rpx 20rpx;
}
.article-handle image{
    width:50rpx;
    height:50rpx;
    margin-left:20rpx;
}

.article-handle button{
    position: relative;
bottom:8rpx;
    width:50rpx;
    height:50rpx;
    padding:0;
    background-color:transparent;
    margin-left:20rpx;
}
.article-handle button::after{
    border:none;
}
.article-handle button image{
    margin-left:0rpx;
}