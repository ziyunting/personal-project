    padding:10rpx;
}
.title-container text{
    font-size: 48rpx;
}
.authorAndDate{
    margin-top:20rpx;
}
.authorAndDate text{
    font-size:28rpx;
    color:#666;
    margin-right:20rpx;
}
.authorAndDate text:first-of-type{
